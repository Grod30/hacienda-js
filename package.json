{
  "name": "@cuyware/hacienda-js",
  "version": "0.1.0",
  "description": "Biblioteca TypeScript para facturación electrónica de Costa Rica (Hacienda)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "factura-electronica",
    "costa-rica",
    "hacienda",
    "firma-digital",
    "xml"
  ],
  "author": "CuyWare",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuyware/hacienda-js.git"
  },
  "bugs": {
    "url": "https://github.com/cuyware/hacienda-js/issues"
  },
  "homepage": "https://github.com/cuyware/hacienda-js#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "xml-crypto": "^3.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
